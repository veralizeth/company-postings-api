{
  "name": "dat-search-be",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "main": "src/index.ts",
  "scripts": {
    "pretranspile": "npm run lint",
    "transpile": "tsc",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "posttranspile": "copyfiles package.json build; ln -fs build/dist dist",
    "build": "npm run clean && npm run transpile",
    "clean": "rm -rf dist build",
    "start": "npm run clean && npm run transpile && node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "test": "npm run test:unit",
    "test:unit": "JEST_JUNIT_OUTPUT_DIR=build/reports/unit npx jest --config=.jest/unit-config.ts --coverage --coverageDirectory ./build/reports/unit/coverage --colors",
    "test:integration": "JEST_JUNIT_OUTPUT_DIR=build/reports/integration npx jest --config=.jest/integration-config.ts integration --coverage --coverageDirectory build/reports/integration/coverage --colors  --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@types/lokijs": "1.5.14",
    "axios": "1.6.8",
    "axios-mock-adapter": "1.22.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "lokijs": "1.5.12",
    "reflect-metadata": "0.2.2",
    "source-map-support": "0.5.21"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "concurrently": "8.2.2",
    "copyfiles": "2.4.1",
    "eslint": "8.57.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "nodemon": "3.1.0",
    "nyc": "15.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tsc-watch": "6.2.0",
    "typescript": "5.4.5"
  },
  "nyc": {
    "include": [
      "dist/**/*.js",
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "cobertura"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  },
  "files": [
    "config",
    "dist",
    "docs",
    "src",
    "package.json"
  ]
}
