{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "ES2020",
    "types": ["jest", "node"],
    "strictNullChecks": true,
    "outDir": "build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
